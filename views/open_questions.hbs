{{> header}}

<main>

    <figure id="background-image" title="Gaming survey background image"></figure>

    <article id="progression">
        <label for="progress">Progress: 50%</label>
        <progress id="progress" value="50" max="100"></progress>
    </article>

    <form action="/rate_game" method="POST" id="open_questions">
        <fieldset>
            <legend id="head-legend">
                <h1>Your opinion is important</h1>
            </legend>

            {{#if uniqueCode}}
            <input type="hidden" name="uniqueCode" id="unique-code" value="{{uniqueCode}}">
            {{/if}}

            <article id="form-section">
                <label for="favoriteGameOfAllTime">What's your favorite game of all time? and why?
                    <textarea name="favoriteGameOfAllTime" id="favorite-game-of-all-time" cols="50" rows="5"
                        placeholder="League of legends.." autofocus
                        required>{{#if answers.open_questions.favoriteGameOfAllTime }}{{answers.open_questions.favoriteGameOfAllTime}}{{/if}}</textarea>
                </label>

                <label for="whatWouldYouDo">if video games didn't exist anymore, what would you do?
                    <textarea name="whatWouldYouDo" id="what-would-you-do" cols="50"
                        placeholder="I would probably cry.." rows="5"
                        required>{{#if answers.open_questions.whatWouldYouDo }}{{answers.open_questions.whatWouldYouDo}}{{/if}}</textarea>

                </label>

                <label for="intoVideoGames">What or who got you into video games in the first place?
                    <textarea name="intoVideoGames" id="into-video-games" cols="50" placeholder="My friends.." rows="5"
                        required>{{#if answers.open_questions.intoVideoGames }}{{answers.open_questions.intoVideoGames}}{{/if}}</textarea>

                </label>

                <article id="buttons">
                    <a href="/game_personal_back/{{uniqueCode}}" tabindex="0">Previous</a>

                    <input type="submit" value="Next">
                </article>
            </article>

        </fieldset>
    </form>
</main>

<script src="/js/validation.js"></script>
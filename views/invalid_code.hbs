{{> header}}

<main id="start-page">

    <section id="background-image" title="Gaming survey background image"></section>

    <form action="/invalid_code" method="POST">
        <fieldset>
            <legend>
                <strong>The entered code</strong> is wrong! please try again
            </legend>
            <p>Look good if you have writen down the code correctly. Other ways you will have to start a new session!
            </p>

            <section id="form-section">
                <label>Enter your unique code to go on with the survey: </label>
                <input type="text" name="uniqueCode" id="unique-code" placeholder="Unique code example"
                    autocomplete="off">

                <section id="buttons">
                    <input type="submit" name="again" value="Try again">

                    <input type="submit" name="getCode" value="New survey">
                </section>
            </section>
        </fieldset>
    </form>

</main>
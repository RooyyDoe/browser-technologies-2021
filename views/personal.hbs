{{> header}}

<main>

    <figure id="background-image" title="Gaming survey background image"></figure>

    <article id="progression">
        <label for="progress">You just started the survey</label>
        <progress id="progress" value="0" max="100"></progress>
    </article>


    <form action="/game_personal" method="POST" id="personal">
        <fieldset>
            <legend>Let's get personal</legend>

            {{#if uniqueCode}}
            <input name="uniqueCode" type="hidden" value="{{uniqueCode}}">
            {{/if}}

            <article id="form-section">
                <label for="name">Your name:</label>
                {{#if answers.personal.name }}
                <input type="text" name="name" id="name" value="{{answers.personal.name}}" autocomplete="off" autofocus
                    required>
                {{else}}
                <input type="text" name="name" id="name" autocomplete="off" placeholder="James" autofocus required>
                {{/if}}


                <label for="surname">Your surname:</label>
                {{#if answers.personal.surname }}
                <input type="text" name="surname" id="surname" value="{{answers.personal.surname}}" autocomplete="off"
                    required>
                {{else}}
                <input type="text" name="surname" id="surname" value="" autocomplete="off" placeholder="Bond" required>
                {{/if}}


                <label for="age">Your age:</label>
                {{#if answers.personal.age }}
                <input type="text" name="age" id="age" value="{{answers.personal.age}}" inputmode="numeric"
                    autocomplete="off" pattern="[0-9]+" required>
                {{else}}
                <input type="text" name="age" id="age" value="" inputmode="numeric" autocomplete="off" pattern="[0-9]+"
                    placeholder="25" required>
                {{/if}}

                <fieldset id="radio-button">
                    <legend>Your gender:</legend>

                    {{#ifEqual answers.personal.gender "man"}}
                    <input type="radio" name="gender" id="man" value="man" checked required>
                    {{else}}
                    <input type="radio" name="gender" id="man" value="man" required>
                    {{/ifEqual}}
                    <label for="man">Man</label>
                    {{#ifEqual answers.personal.gender "woman"}}
                    <input type="radio" name="gender" id="woman" value="woman" checked required>
                    {{else}}
                    <input type="radio" name="gender" id="woman" value="woman" required>
                    {{/ifEqual}}
                    <label for="woman">Woman</label>

                </fieldset>

                <label for="gamertag">Your gamertag:</label>
                {{#if answers.personal.gamertag }}
                <input type="text" name="gamertag" id="gamertag" value="{{answers.personal.gamertag}}"
                    autocomplete="off" required>
                {{else}}
                <input type="text" name="gamertag" id="gamertag" value="" autocomplete="off"
                    placeholder="xXsupergamerXx" required>
                {{/if}}

                <article id="buttons">
                    <a href="/start"> Get me back </a>

                    <input type="submit" value="Next">
                </article>
            </article>

        </fieldset>
    </form>
</main>